{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2017",
        "lib": ["ES2017", "DOM"],

        "rootDir": "src",
        "outDir": "build",
        "baseUrl": "src",
        "paths": {
        },

        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "exactOptionalPropertyTypes": true
    },
    "include": [
        "src/**/*"
    ]
}